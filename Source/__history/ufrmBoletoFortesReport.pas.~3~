uses Curso.Boleto.DM;

{$R *.dfm}

procedure TfrmBoletoFortesReport.RLBandPrinBeforePrint(Sender: TObject;
  var PrintIt: Boolean);
var
  NumBanco: string;
begin
  NumBanco := dsConta.DataSet.FieldByName('Numerobanco').AsString +
    '-' + dsConta.DataSet.FieldByName('DigitoNumBanco').AsString;
  lbNumBanco1.Caption := NumBanco;
  lbNumBanco2.Caption := NumBanco;
  bcCodigoBarras.Caption := dsBoleto.DataSet.FieldByName('CodigoBarras').AsString;
end;

end.
